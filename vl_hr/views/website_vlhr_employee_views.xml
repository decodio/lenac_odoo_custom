<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_layout" name="Portal layout: Phonebook menu entery" inherit_id="website_portal.portal_layout" priority="40">
        <xpath expr="//ul[contains(@class,'o_portal_submenu')]" position="inside">
            <li t-att-class="page_name == 'phonebook' and 'active' or ''">
                 <a href="/my/phonebook">Phonebook</a>
            </li>
        </xpath>
    </template>

    <template id="vl_phonebook" name="Phonebook" page="True">
        <t t-call="website_portal.portal_layout">
            <div id="wrap">
                <div class="container">
                    <div class="oe_structure">
                        <div class="row">
                            <div class="col-sm-12">
                                <center>
                                    <h2>Phonebook</h2>
                                </center>
                                <t t-foreach="departments" t-as="departments">
                                    <table class="table-striped table">
                                        <tr>
                                            <td><h3><span t-esc="departments.name"/></h3></td>
                                            <td><h3>Phone</h3></td>
                                            <td><h3>Phone Short</h3></td>
                                            <td><h3>Mobile Phone</h3></td>
                                            <td><h3>Mobile Phone Short</h3></td>
                                        </tr>
                                        <t t-foreach="departments" t-as="departments">
                                            <tr>
                                              <td><h4><span t-esc="departments.employee_id.name"/></h4></td>
                                              <td><h4><span t-esc="departments.employee_id.work_phone"/></h4></td>
                                              <td><h4><span t-esc="departments.employee_id.work_phone_short"/></h4></td>
                                              <td><h4><span t-esc="departments.employee_id.mobile_phone"/></h4></td>
                                              <td><h4><span t-esc="departments.employee_id.mobile_phone_short"/></h4></td>
                                            </tr>
                                        </t>
                                    </table>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
