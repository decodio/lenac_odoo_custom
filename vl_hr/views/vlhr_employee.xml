    <!--HR Employee-->
    <record id="view_vl_employee_form_inherit_extension" model="ir.ui.view">
      <field name="name">view.vl.employee.form.inherit.extension</field>
      <field name="model">hr.employee</field>
      <field name="inherit_id" ref="hr.view_employee_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='user_id']"  position="after">
            <field name="employee_number"/>
            <field name="employee_number_long"/>
            <field name="employee_mifare_card_number"/>
        </xpath>
        <xpath expr="//field[@name='work_phone']"  position="after">
            <field name="work_phone_short"/>
        </xpath>
        <xpath expr="//field[@name='mobile_phone']"  position="after">
            <field name="mobile_phone_short"/>
        </xpath>
        <xpath expr="//field[@name='job_id']"  position="after">
            <field name="job_long_id"/>
        </xpath>
        <xpath expr="//field[@name='marital']"  position="after">
            <field name="youth"/>
            <field name="disability"/>
        </xpath>
        <notebook>
            <page string="Assigned equipment" name="employee_personal_equipment">
                <group>
                    <field name="employee_assigned_equipment_ids" string="Equipment Assigned to Employees"/>
                </group>
                <!--group>
                    <field name="employee_small_equipment_ids" string="Small Equipment Assigned to Employees">
                        <tree editable="top">
                            <field name="name"/>
                        </tree>
                    </field>
                </group-->
            </page>
        </notebook>
        <notebook>
            <page string="Job history" name="employee_job_history">
                <group>
                    <field name="history_job_ids">
                       <tree editable="top">
                            <field name="job_id"/>
                            <field name="date_start"/>
                            <field name="date_stop"/>
                            <field name="mobile_short"/>
                        </tree>
                    </field>
                </group>
            </page>
        </notebook>
      </field>
    </record>

    <!--HR Department-->
    <record id="view_vl_department_form_inherit_extension" model="ir.ui.view">
      <field name="name">view.vl.department.form.inherit.extension</field>
      <field name="model">hr.department</field>
      <field name="inherit_id" ref="hr.view_department_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='name']"  position="after">
            <field name="department_code"/>
        </xpath>
        <sheet>
            <div name="button_box" position="inside">
                <button class="oe_stat_button" name="website_publish_button" type="object" icon="fa-globe">
                    <field name="website_published" widget="website_button"/>
                </button>
            </div>
            <notebook>
                <page string="Department jobs" name="department_jobs">
                    <group string="Department jobs">
                        <group>
                            <field name="department_job">
                                <tree editable="top">
                                    <field name="sequence"/>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                </page>
                <page string="Equipment assigned to department" name="department_related_equipment">
                    <group string="Department equipment">
                        <group>
                            <field name="department_assigned_equipment_ids"/>
                        </group>
                    </group>
                </page>
            </notebook>
        </sheet>
        <!--<xpath expr="//field[@name='company_id']" position="after">
            <field string="Equipment assigned to department" name="department_assigned_equipment_ids"/>
        </xpath>-->
      </field>
    </record>

