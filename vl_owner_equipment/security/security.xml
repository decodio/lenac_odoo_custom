<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.module.category" id="owner_equipment">
          <field name="name">Owner Equipment</field>
          <field name="description">User access level for this module</field>
          <field name="sequence">7</field>
        </record>
        <record id="owner_equipment_user" model="res.groups">
            <field name="name">Owner Equipment User</field>
            <field name="category_id" ref="vl_owner_equipment.owner_equipment"/>
