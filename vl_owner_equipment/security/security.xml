        </record>
        <record id="owner_equipment_project_manager" model="res.groups">
          <field name="name">Project Equipment Manager</field>
          <field name="implied_ids" eval="[(4, ref('vl_owner_equipment.owner_equipment_manager'))]"/>
          <field name="users" eval="[(4, ref('base.user_root'))]"/>
          <field name="category_id" ref="vl_owner_equipment.owner_equipment"/>
        </record>
        <record id="owner_equipment_administrator" model="res.groups">
          <field name="name">Equipment Administrator</field>
          <field name="implied_ids" eval="[(4, ref('vl_owner_equipment.owner_equipment_project_manager'))]"/>
          <field name="users" eval="[(4, ref('base.user_root'))]"/>
          <field name="category_id" ref="vl_owner_equipment.owner_equipment"/>
        </record>
    </data>
</odoo>