<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="maintenance_database_search_view">
            <field name="name">Database inventory</field>
            <field name="model">maintenance.database</field>
            <field name="arch" type="xml">
                <search string="Database inventory">
                    <field name="name"/>
                    <field name="database_application"/>
                    <field name="database_tables"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="maintenance_database_view_tree" >
            <field name="name">Database inventory</field>
            <field name="model">maintenance.database</field>
            <field name="arch" type="xml">
                <tree string="Database inventory">
                    <field name="name"/>
                    <field name="database_application"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="maintenance_database_view_form">
            <field name="name">maintenance.database</field>
            <field name="model">maintenance.database</field>
            <field name="arch" type="xml">
                <form string="Database details">
                    <header>
                    </header>
                    <sheet>
                        <group string = "Database details">
                            <group>
                                    <field name="name"/>
                                    <field name="database_application"/>
                                    <field name="database_tables"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="maintenance_database_action">
            <field name="name">Database</field>
            <field name="res_model">maintenance.database</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new AD user group.
              </p>
            </field>
        </record>

        <record model="ir.ui.view" id="maintenance_tables_search_view">
            <field name="name">Tables inventory</field>
            <field name="model">maintenance.tables</field>
            <field name="arch" type="xml">
                <search string="Database inventory">
                    <field name="name"/>
                    <field name="table_fields"/>
                    <field name="table_menu_item"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="maintenance_tables_view_tree" >
            <field name="name">Tables inventory</field>
            <field name="model">maintenance.tables</field>
            <field name="arch" type="xml">
                <tree string="Database inventory">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="maintenance_tables_view_form">
            <field name="name">maintenance.tables</field>
            <field name="model">maintenance.tables</field>
            <field name="arch" type="xml">
                <form string="Table details">
                    <header>
                    </header>
                    <sheet>
                        <group string = "Table details">
                            <group>
                                    <field name="name"/>
                                    <field name="table_fields"/>
                                    <field name="table_menu_item"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="maintenance_tables_action">
            <field name="name">Tables</field>
            <field name="res_model">maintenance.tables</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new table.
              </p>
            </field>
        </record>

        <menuitem
        id="menu_m_data"
        name="Data Inventory"
        parent="maintenance.menu_maintenance_title"
        groups="vl_maintenance.group_it_admin"
        sequence="100"/>

        <menuitem
        id="menu_m_database"
        name="Database Inventory"
        parent="menu_m_data"
        groups="vl_maintenance.group_it_admin"
        sequence="1"/>

        <menuitem
            id="menu_maintenance_database"
            name="Database inventory"
            parent="menu_m_database"
            action="maintenance_database_action"
            groups="vl_maintenance.group_it_admin"
            sequence="10"/>

        <menuitem
            id="menu_maintenance_tables"
            name="Tables inventory"
            parent="menu_m_database"
            action="maintenance_tables_action"
            groups="vl_maintenance.group_it_admin"
            sequence="20"/>

    </data>
</odoo>