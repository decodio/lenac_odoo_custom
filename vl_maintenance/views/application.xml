<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="maintenance_application_search_view">
            <field name="name">Application inventory</field>
            <field name="model">maintenance.application</field>
            <field name="arch" type="xml">
                <search string="Application inventory">
                    <field name="application_select" string="Application name"/>
                    <field name="application_module"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="maintenance_application_view_tree" >
            <field name="name">Application inventory</field>
            <field name="model">maintenance.application</field>
            <field name="arch" type="xml">
                <tree string="Application inventory">
                    <field name="application_select" string="Application name"/>
                    <field name="a_related_hours" sum="Sum" string="Hours spent"> h</field>
                    <field name="a_related_cost_cooperation" sum="Sum" string="Cost"> kn</field>
                    <field name="application_module"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="maintenance.application_view_form">
            <field name="name">maintenance.application</field>
            <field name="model">maintenance.application</field>
            <field name="arch" type="xml">
                <form string="Application details">
                    <header>
                    </header>
                    <sheet>
                        <group string = "Application details">
                            <group>
                                   <field name="application_select"/>
                                   <field name="application_master_project"/>
                                   <field name="a_related_hours" string="Hours spent"> h</field>
                                   <field name="a_related_cost_cooperation" string="Cost"> kn</field>
                                   <field name="application_module">
                                           <tree>
                                                <field name="name"/>
                                                <field name="m_related_hours" string="Hours spent"> h</field>
                                                <field name="m_related_cost_cooperation" string="Cost"> kn</field>
                                           </tree>
                                   </field>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="maintenance_application_action">
            <field name="name">Application</field>
            <field name="res_model">maintenance.application</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new Application.
              </p>
            </field>
        </record>

        <record model="ir.ui.view" id="maintenance_module_items_search_view">
            <field name="name">Module inventory</field>
            <field name="model">maintenance.module.items</field>
            <field name="arch" type="xml">
                <search string="Module inventory">
                    <field name="name"/>
                    <field name="allowed_groups"/>
                    <field name="allowed_users"/>
                    <field name="module_menu_view"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="maintenance_module_items_view_tree" >
            <field name="name">Module inventory</field>
            <field name="model">maintenance.module.items</field>
            <field name="arch" type="xml">
                <tree string="Module inventory">
                    <field name="name"/>
                    <field name="application"/>
                    <field name="m_related_hours" sum="Sum" string="Hours spent"> h</field>
                    <field name="m_related_cost_cooperation" sum="Sum" string="Cost"> kn</field>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="maintenance_module_items_view_form">
            <field name="name">maintenance.module.items</field>
            <field name="model">maintenance.module.items</field>
            <field name="arch" type="xml">
                <form string="Module details">
                    <header>
                    </header>
                    <sheet>
                        <group string = "Module details">
                            <group>
                                <field name="name"/>
                                <field name="m_related_hours" string="Hours spent"> h</field>
                                <field name="m_related_cost_cooperation" string="Cost"> kn</field>
                                <field name="module_menu_view">
                                    <tree>
                                        <field name="name"/>
                                        <field name="related_hours" sum="Sum" string="Hours spent"> h</field>
                                        <field name="related_cost_cooperation" sum="Sum" string="Cost"> kn</field>
                                    </tree>
                                </field>
                            </group>
                            <group>
                                <field name="allowed_groups"/>
                                <field name="allowed_users"/>
                                <field name="application" string="Application name" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="maintenance_module_items_action">
            <field name="name">Module items</field>
            <field name="res_model">maintenance.module.items</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new Module item.
              </p>
            </field>
        </record>

        <record model="ir.ui.view" id="maintenance_module_menu_search_view">
            <field name="name">Menu inventory</field>
            <field name="model">maintenance.module.menu</field>
            <field name="arch" type="xml">
                <search string="Menu inventory">
                    <field name="name"/>
                    <field name="menu_view"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="maintenance_module_menu_view_tree" >
            <field name="name">Menu inventory</field>
            <field name="model">maintenance.module.menu</field>
            <field name="arch" type="xml">
                <tree string="Menu inventory">
                    <field name="name"/>
                    <field name="menu_view"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="maintenance_module_menu_view_form">
            <field name="name">maintenance.module.menu</field>
            <field name="model">maintenance.module.menu</field>
            <field name="arch" type="xml">
                <form string="View details">
                    <header>
                    </header>
                    <sheet>
                        <group string = "View details">
                            <field name="name"/>
                            <field name="related_hours" string="Hours spent"> h</field>
                            <field name="related_cost_cooperation" string="Cost"/>
                            <field name="menu_view">
                                <tree>
                                    <field name="name" invisible="1"/>
                                    <field name="view_version"/>
                                    <field name="change_description"/>
                                    <field name="hours_spent" sum="Sum"> h</field>
                                    <field name="cost_cooperation" sum="Sum"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="maintenance_module_menu_action">
            <field name="name">Module view items</field>
            <field name="res_model">maintenance.module.menu</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new Menu item.
              </p>
            </field>
        </record>

        <record model="ir.ui.view" id="maintenance_menu_view_search_view">
            <field name="name">Menu item inventory</field>
            <field name="model">maintenance.menu.view</field>
            <field name="arch" type="xml">
                <search string="Menu item inventory">
                    <field name="name" context="{'form_view_ref': 'vl_maintenance.maintenance_module_menu_view_form', 'default_name': name'}"/>
                    <field name="view_menu"/>
                    <field name="view_version"/>
                    <field name="change_description"/>
                    <field name="hours_spent"/>
                    <field name="cost_cooperation"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="maintenance_menu_view_view_tree" >
            <field name="name">Menu item inventory</field>
            <field name="model">maintenance.menu.view</field>
            <field name="arch" type="xml">
                <tree string="Menu item inventory">
                    <field name="view_menu"/>
                    <field name="view_version"/>
                    <field name="change_description"/>
                    <field name="hours_spent"/>
                    <field name="cost_cooperation"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="maintenance_menu_view_view_form">
            <field name="name">maintenance.menu.view</field>
            <field name="model">maintenance.menu.view</field>
            <field name="arch" type="xml">
                <form string="Change details">
                    <header>
                    </header>
                    <sheet>
                        <group string = "Change details">
                            <group>
                                    <field name="name" invisible="1"/>
                                    <field name="view_version"/>
                                    <field name="change_description"/>
                                    <field name="hours_spent"/>
                                    <field name="cost_cooperation"/>
                                    <field name="related_issue" context="{'form_view_ref': 'sp_viktor_lenac.project_issue_lenac_form_view'}" string="Realted Issue"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="maintenance_menu_view_action">
            <field name="name">Module item inventory</field>
            <field name="res_model">maintenance.menu.view</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new Menu item.
              </p>
            </field>
        </record>

         <record model="ir.ui.view" id="maintenance_application_groups_search_view">
            <field name="name">Groups inventory</field>
            <field name="model">maintenance.application.groups</field>
            <field name="arch" type="xml">
                <search string="Groups inventory">
                    <field name="name"/>
                    <field name="allowed_users"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="maintenance_application_groups_view_tree" >
            <field name="name">Groups inventory</field>
            <field name="model">maintenance.application.groups</field>
            <field name="arch" type="xml">
                <tree string="Menu inventory">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="maintenance_application_groups_view_form">
            <field name="name">maintenance.application.groups</field>
            <field name="model">maintenance.application.groups</field>
            <field name="arch" type="xml">
                <form string="Group details">
                    <header>
                    </header>
                    <sheet>
                        <group string = "Group details">
                            <group>
                                    <field name="name"/>
                                    <field name="allowed_users"/>
                                    <field name="allowed_create"/>
                                    <field name="allowed_edit"/>
                                    <field name="allowed_read"/>
                                    <field name="allowed_delete"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="maintenance_application_groups_action">
            <field name="name">Application groups</field>
            <field name="res_model">maintenance.application.groups</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new group.
              </p>
            </field>
        </record>

        <menuitem
        id="menu_m_application"
        name="Application Inventory"
        parent="menu_m_data"
        groups="maintenance.group_equipment_manager"
        sequence="2"/>

        <menuitem
            id="menu_maintenance_application"
            name="Application inventory"
            parent="menu_m_application"
            action="maintenance_application_action"
            groups="maintenance.group_equipment_manager"
            sequence="10"/>

        <menuitem
            id="menu_maintenance_module_items"
            name="Module inventory"
            parent="menu_m_application"
            action="maintenance_module_items_action"
            groups="maintenance.group_equipment_manager"
            sequence="20"/>

        <menuitem
            id="menu_maintenance_menu_items"
            name="Menu inventory"
            parent="menu_m_application"
            action="maintenance_module_menu_action"
            groups="maintenance.group_equipment_manager"
            sequence="30"/>

        <menuitem
            id="menu_maintenance_menu_items"
            name="Module item inventory"
            parent="menu_m_application"
            action="maintenance_menu_view_action"
            groups="maintenance.group_equipment_manager"
            sequence="40"/>

         <menuitem
            id="menu_maintenance_application_groups"
            name="Groups inventory"
            parent="menu_m_application"
            action="maintenance_application_groups_action"
            groups="maintenance.group_equipment_manager"
            sequence="50"/>

    </data>
</odoo>