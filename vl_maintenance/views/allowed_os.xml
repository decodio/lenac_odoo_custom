<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record model="ir.ui.view" id="maintenance_allowed_os_search_view">
            <field name="name">Software inventory</field>
            <field name="model">maintenance.allowed.os</field>
            <field name="arch" type="xml">
                <search string="Software name">
                    <field name="name"/>
                    <field name="sw_version"/>
                    <field name="sw_purchase_date"/>
                    <field name="sw_type"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="maintenance_allowed_os_view_tree" >
            <field name="name">Software inventory</field>
            <field name="model">maintenance.allowed.os</field>
            <field name="arch" type="xml">
                <tree string="Software name">
                    <field name="name"/>
                    <field name="sw_version"/>
                    <field name="sw_purchase_date"/>
                    <field name="sw_type"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="maintenance_allowed_os_view_form">
            <field name="name">maintenance.allowed.os</field>
            <field name="model">maintenance.allowed.os</field>
            <field name="arch" type="xml">
                <form string="Installed software">
                    <header>
                    </header>
                    <sheet>
                        <group string = "Software details">
                            <group>
                                    <field name="name"/>
                                    <field name="sw_type"/>
                                    <field name="sw_vendor"/>
                                    <field name="sw_version"/>
                                    <field name="sw_licence"/>
                                    <field name="sw_serial"/>

                            </group>
                            <group>
                                    <field name="sw_purchase_date"/>
                                    <field name="sw_licence_exp"/>
                                    <field name="sw_price"/>
                                    <field name="sw_licence_assigned_person"/>
                                    <field name="sw_licence_assigned_dep"/>
                                    <field name="sw_spec"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="maintenance_allowed_os_action">
            <field name="name">Installed software</field>
            <field name="res_model">maintenance.allowed.os</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a Software.
              </p>
            </field>
        </record>

        <menuitem
            id="menu_maintenance_allowed_os"
            name="Allowed software"
            parent="maintenance.menu_maintenance_configuration"
            action="maintenance_allowed_os_action"
            sequence="200"/>

    </data>
</odoo>