<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_mgmtsystem_ncr_form_inherit" model="ir.ui.view">
            <field name="name">view.mgmtsystem.ncr.form.inherit</field>
            <field name="model">mgmtsystem.nonconformity</field>
            <field name="inherit_id" ref="mgmtsystem_nonconformity.view_mgmtsystem_nonconformity_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[4]/separator" position="before">
                    <separator string="Correction"/>
                    <field name = "correction"
                               attrs="{'readonly':[('state','not in',['analysis'])]}"
                               placeholder="Što je učinjeno kako bi se posljedica nesukladnosti otklonila"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
