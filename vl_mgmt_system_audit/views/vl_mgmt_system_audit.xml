<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <function model="mgmtsystem.audit" name="_fill_system"/>
    </data>
    <data>
        <record id="view_mgmtsystem_audit_form_inherit" model="ir.ui.view">
            <field name="name">view.mgmtsystem.audit.form.inherit</field>
            <field name="model">mgmtsystem.audit</field>
            <field name="inherit_id" ref="mgmtsystem_audit.view_mgmtsystem_audit_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='system_id']" position="after">
                        <field name = "system_ids" widget="many2many_tags" string="Multi system"/>
                </xpath>
            </field>
        </record>
        <record id="view_mgmtsystem_verification_line_popup_form_inherit" model="ir.ui.view">
            <field name="name">view.mgmtsystem.verification.line.popup.form.inherit</field>
            <field name="model">mgmtsystem.verification.line</field>
            <field name="inherit_id" ref="mgmtsystem_requirement.view_mgmtsystem_verification_line_popup_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                        <field name = "name_id" string="System"/>
                </xpath>
                <xpath expr="//field[@name='requirement_id']" position="replace">
                    <field name = "requirement_id" string="Requirement"
                           domain="[('system_id', '=', name_id)]"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>