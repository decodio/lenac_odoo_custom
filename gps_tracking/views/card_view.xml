<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record model="ir.ui.view" id="gps_card_search_view">
            <field name="name">GPS Card</field>
            <field name="model">gps.card</field>
            <field name="arch" type="xml">
                <search string="GPS Card">
                    <field name="card_no"/>
                    <field name="first_name"/>
                    <field name="last_name"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="gps_card_tree_view">
            <field name="name">GPS Card</field>
            <field name="model">gps.card</field>
            <field name="arch" type="xml">
                <tree string="GPS Card">
                    <field name="card_no"/>
                    <field name="first_name"/>
                    <field name="last_name"/>
                </tree>
            </field>
        </record>

       <record model="ir.ui.view" id="gps_card_form_view">
            <field name="name">GPS Card</field>
            <field name="model">gps.card</field>
            <field name="arch" type="xml">
                <form string="GPS Card">
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group string="Informations">
                                <field name="card_no"/>
                                <field name="first_name"/>
                                <field name="last_name"/>
                            </group>
                            <group>

                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="gps_card_action">
            <field name="name">GPS Card</field>
            <field name="res_model">gps.card</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new Card entry.
              </p>
            </field>
        </record>

        <menuitem id="menu_phonebook" action="gps_card_action"  sequence="1"/>

   </data>
</odoo>
