                    <field name="name"/>
                    <field name="article_date"/>
                    <field name="article_author"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="vl_article_form_view">
            <field name="name">website.portal.article</field>
            <field name="model">website.portal.article</field>
            <field name="arch" type="xml">
                <form string="News">
                    <header>
                    </header>
                    <sheet>
                        <div name="button_box" position="inside">
                            <button class="oe_stat_button" name="website_publish_button" type="object" icon="fa-globe">
                                <field name="website_published" widget="website_button"/>
                            </button>
                        </div>
                        <group>
                            <field name="name"/>
                            <field name="article_date"/>
                            <field name="article_author"/>
                            <field name="article_text"/>
                        </group>
                    </sheet>
                </form>
            </field>
