<odoo>
    <template id="portal_layout" name="Portal layout: News menu entery" inherit_id="website_portal.portal_layout" priority="60">
        <xpath expr="//ul[contains(@class,'o_portal_submenu')]" position="inside">
            <li t-att-class="page_name == 'news' and 'active' or ''" groups="vl_intranet.group_intranet_user">
                 <a href="/my/news">News</a>
            </li>
            <!--<li t-att-class="page_name == 'syndicate' and 'active' or ''" groups="vl_intranet.group_intranet_user">
                 <a href="/my/syndicate">Syndicate news</a>
            </li>-->
            <li t-att-class="page_name == 'itclinks' and 'active' or ''" groups="vl_intranet.group_intranet_user">
                   <a href="/my/itclinks">VL Application Links</a>
            </li>
            <li t-att-class="page_name == 'viktorservisi' and 'active' or ''" groups="vl_intranet.group_intranet_user">
                   <a href="/my/viktorservisi">Viktor Servisi</a>
            </li>
             <!--<li t-att-class="page_name == 'questions' and 'active' or ''" groups="vl_intranet.group_intranet_user">
                   <a href="/my/questions">Questions/Suggestions</a>
            </li>-->
        </xpath>
    </template>

    <template id="vl_article" name="News" page="True">
        <t t-call="website_portal.portal_layout">
            <h3 class="page-header" groups="vl_intranet.group_intranet_user">
                News
                <div class="dropdown pull-right mr8">
                    <button id="sortby" class="btn btn-default" type="button" data-toggle="dropdown">
                        <span class="fa fa-sort" /> <span t-esc="sortings.get(sortby, {}).get('label', 'Newest')"/>
                        <span class="caret"></span>
                    </button>
                     <ul class="dropdown-menu" aria-labelledby="sortby">
                        <li t-foreach="sortings" t-as="option" t-att-class="sortby == option and 'active'">
                            <a t-att-href="default_url + '?' + keep_query('date_begin', 'date_end', sortby=option)"><span t-esc="sortings.get(option).get('label')"/></a>
                        </li>
                    </ul>
                </div>
            </h3>
            <div id="wrap" groups="vl_intranet.group_intranet_user">
                <div class="container">
                    <div class="oe_structure">
                        <div class="row">
                            <div class="col-sm-12">
                                <table>
                                  <tr t-foreach="article" t-as="l">
                                      <tr>
                                          <td>
                                            <h3><span t-esc="l.name"/></h3>
                                          </td>
                                      </tr>
                                      <tr>
                                          <td>
                                              <span t-esc="l.article_date"/>
                                          </td>
                                      </tr>
                                      <tr>
                                          <td>
                                              <span t-esc="l.article_author.name"/>
                                          </td>
                                      </tr>
                                      <tr>
                                          <td>
                                              <span t-raw="l.article_text" widget="html"/>
                                          </td>
                                      </tr>
                                  </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div t-if="pager" class="o_portal_pager text-center" groups="vl_intranet.group_intranet_user">
                <t t-call="website.pager"/>
            </div>
        </t>
    </template>

