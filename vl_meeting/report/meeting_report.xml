<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="meeting_report">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <tr t-call="report.external_layout">
                <div class="page">
                    <div style="padding:0px;width:600px;margin:auto;background: #FFFFFF repeat top /100%;color:#777777">
                        <table cellspacing="0" cellpadding="0" style="width:600px;border-collapse:collapse;background:inherit;color:inherit">
                            <tbody>
                                <tr>
                                    <td valign="center" width="200" style="padding:10px 10px 10px 5px;font-size: 12px">
                                        <img src="/vl_meeting/static/src/logo.jpg" style="padding: 0px; margin: 0px; height: 100px; width: auto;" alt="o.company_id.name"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <table cellspacing="0" cellpadding="0" style="width:600px;border-collapse:collapse;background:inherit;color:inherit">
                            <tbody>
                                <tr>
                                    <td valign="top" style="width:600px; padding:10px 10px 10px 5px;">
                                        <div>
                                            <hr width="100%" style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0;margin:15px auto;padding:0"/>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div style="padding:0px;width:600px;margin:auto;background: #FFFFFF repeat top /100%;color:#777777">
                        <table cellspacing="0" cellpadding="0" style="width:600px;border-collapse:collapse;background:inherit;color:inherit">
                            <tbody>
                                <tr>
                                    <td style="padding:10px 10px 10px 5px;font-size: 14px;">
                                        <p style="font-size: 20px; text-align: center;">Meeting conclusion for <strong><span t-field="o.name"/></strong></p>
                                        <p>
                                            Here is the Meeting conclusion for the project <span t-field="o.name"/> held on <span t-field="o.start_datetime"/>.</p>
                                        <table style="margin-top: 20px;">
                                            <tr>
                                                <td>
                                                    <p>Details of the event</p>
                                                    <ul>
                                                        <li>Description: <span t-field="o.description"/></li>
                                                        <li>Attendees:
                                                            <ul>
                                                                <li t-foreach="o.attendee_ids" t-as="l">
                                                                    <span t-esc="l.common_name"/>
                                                                    <span style="margin-left:5px"/>
                                                                </li>
                                                            </ul>
                                                        </li>
                                                        <li>Meeting conclusion
                                                            <ul>
                                                                <li><span t-field="o.meeting_notes"/></li>
                                                            </ul>
                                                        </li>
                                                    </ul>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </tr>
        </t>
    </t>
    </template>
</odoo>




