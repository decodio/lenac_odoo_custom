    <record model="ir.ui.view" id="allowed_software_search_view">
        <field name="name">Software</field>
        <field name="model">allowed.os</field>
        <field name="arch" type="xml">
            <search string="Software">
                <field name="sw_name" string="Software Name"/>
                <field name="sw_vendor" string="Software vendor"/>
                <field name="sw_version" string="Software version"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="allowed_software_tree_view">
        <field name="name">Software</field>
        <field name="model">allowed.os</field>
        <field name="arch" type="xml">
            <tree string="Software">
                <field name = "sw_name"/>
                <field name = "sw_vendor"/>
                <field name = "sw_version"/>
                <field name = "sw_licence"/>
                <field name = "sw_serial"/>
                <field name = "sw_purchase_date"/>
                <field name = "sw_licence_exp"/>
                <field name = "sw_price"/>
                <field name = "sw_licence_assignd_person"/>
                <field name = "sw_licence_assignd_dep"/>
                <field name = "sw_spec"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="allowed_software_form_view">
        <field name="name">Software</field>
        <field name="model">allowed.os</field>
        <field name="arch" type="xml">
            <form string="Software">
                <header>
                </header>
                <sheet>
                    <field name = "sw_name"/>
                    <field name = "sw_vendor"/>
                    <field name = "sw_version"/>
                    <field name = "sw_licence"/>
                    <field name = "sw_serial"/>
                    <field name = "sw_purchase_date"/>
                    <field name = "sw_licence_exp"/>
                    <field name = "sw_price"/>
                    <field name = "sw_licence_assignd_person"/>
                    <field name = "sw_licence_assignd_dep"/>
                    <field name = "sw_spec"/>
                </sheet>
            </form>
        </field>
    </record>

