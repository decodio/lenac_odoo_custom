<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <data>
    <template id="vl_theme.theme_lenac" name="My style" inherit_id="website.assets_frontend" active="False" customize_show="False">
        <xpath expr="link[last()]" position="inside">
            <link href="/vl_theme/static/less/style.less" rel="stylesheet" type="text/less"/>
        </xpath>
    </template>

    <template id="theme_customize" inherit_id="website.theme_customize" name="theme_customize Lenac">
        <xpath expr="div" position="replace">
          <div id="theme_customize_modal" class="modal fade bs-example-modal-sm">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="loading_backdrop"></div>
                <div class="modal-header">
                  <button type="button" class="close">Ã—</button>
                  <h4 class="modal-title">Customize your theme</h4>
                </div>
                <div class="modal-body">
                  <table>
                    <tr>
                      <td>
                        <label class="checked">
                          <img style="width: 120px; height: 70px;" alt="Default Theme"/>
                          <input name="theme" type="radio" data-xmlid="" checked="checked"/>
                        </label>
                      </td>
                      <td>
                        <label>
                          <img style="width: 120px; height: 70px;" src="/vl_theme/static/src/img/logo.png" alt="Lenac"/>
                          <input name="theme" type="radio" data-xmlid="vl_theme.theme_lenac"/>
                        </label>
                      </td>
                    </tr>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </xpath>
    </template>
</data>
</odoo>