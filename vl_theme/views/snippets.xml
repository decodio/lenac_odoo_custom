<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <data>
      <template id="snippet_testimonial" name="Testimonial snippet">
          <section class="snippet_testimonial">
            <div class="container text-center">
              <div class="row">
                <div class="col-md-4">
                  <img alt="client" class="img-circle" src="/vl_theme/static/src/img/client_1.jpg"/>
                  <h3>Client Name</h3>
                  <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                </div>
                <div class="col-md-4">
                  <img alt="client" class="img-circle" src="/vl_theme/static/src/img/client_2.jpg"/>
                  <h3>Client Name</h3>
                  <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                </div>
                <div class="col-md-4">
                  <img alt="client" class="img-circle" src="/vl_theme/static/src/img/client_3.jpg"/>
                  <h3>Client Name</h3>
                  <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                </div>
              </div>
            </div>
          </section>
      </template>

      <template id="place_into_bar" inherit_id="website.snippets" name="Place into bar">
          <xpath expr="//div[@id='snippet_structure']/div[@class='o_panel_body']" position="inside">
            <t t-snippet="vl_theme.snippet_testimonial"
               t-thumbnail="/vl_theme/static/src/img/ui/snippet_thumb.jpg"/>

            <t t-snippet="vl_theme.vl_title"
               t-thumbnail="/vl_theme/static/src/img/ui/snippet_thumb.jpg"/>
            <t t-snippet="vl_theme.vl_cover"
               t-thumbnail="/vl_theme/static/src/img/ui/snippet_thumb.jpg"/>
            <t t-snippet="vl_theme.vl_text_image"
               t-thumbnail="/vl_theme/static/src/img/ui/snippet_thumb.jpg"/>
            <t t-snippet="vl_theme.vl_image_text"
               t-thumbnail="/vl_theme/static/src/img/ui/snippet_thumb.jpg"/>

            <t t-snippet="vl_theme.vl_features"
               t-thumbnail="/vl_theme/static/src/img/ui/snippet_thumb.jpg"/>
          </xpath>
      </template>

      <template id="vl_title" name="Title">
        <section class="vl_title">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="text-center h1-title">Your Website Title</h1>
                        <h3 class="text-center text-muted h3-title">And a great subtitle too</h3>
                    </div>
                </div>
            </div>
        </section>
      </template>

      <template id="vl_cover" name="Cover">
        <section class="s_text_block_image_fw oe_img_bg oe_custom_bg" style="background-image: url(/web/image/website.s_cover_default_image); background-position: 50% 100%">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 mt64 mb64 bg-black-25">
                        <h2 class="h2-cover">Headline</h2>
                        <h4 class="h4-cover">With a great subtitle</h4>
                        <p class="p-cover">Write one or two paragraphs describing your product, services or a specific feature. To be successful your content needs to be useful to your readers.</p>
                    </div>
                </div>
            </div>
        </section>
      </template>

      <template id="vl_text_image" name="Text-Image">
        <section class="vl_text_image">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 mt64 mb32">
                        <h3 class="h3-text-image" style="text-align: right;">A Section Subtitle</h3>
                        <p class="p-text-image" style="text-align: right;">
                            Write one or two paragraphs describing your product or
                            services.<br/>To be successful your content needs to be
                            useful to your readers.
                        </p><p class="p-text-image" style="text-align: right;">
                            Start with the customer – find out what they want
                            and give it to them.
                        </p>
                    </div>
                    <div class="col-md-6 mt32 mb32">
                      <img class="img img-responsive pull-left mb16" src="/web/image/website.s_text_image_default_image" alt="Odoo text and image block"/>
                    </div>
                </div>
            </div>
        </section>
      </template>

      <template id="vl_image_text" name="Image-Text">
        <section class="vl_image_text">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 mt32 mb32">
                      <img class="img img-responsive center-block mb16" src="/web/image/website.s_image_text_default_image"  alt="Odoo image and text block"/>
                    </div>
                    <div class="col-md-6 mt64 mb32">
                        <h3 class="h3-text-image">A Section Subtitle</h3>
                        <p class="p-text-image">
                            Write one or two paragraphs describing your product,
                            services or a specific feature. To be successful
                            your content needs to be useful to your readers.
                        </p><p class="p-text-image">
                            Start with the customer – find out what they want
                            and give it to them.
                        </p>
                    </div>
                </div>
            </div>
        </section>
      </template>

      <template id="vl_features" name="Features">
        <section class="vl_features">
            <div class="container">
                <div class="row mt16 mb16">
                    <div class="col-md-4 text-center">
                        <span class="fa fa-suitcase fa-5x icon-vl-feat"></span>
                        <h3 class="mt8 mb0 h3">First Feature</h3>
                        <p class="text-muted h4">Tell what's the value for the<br/>customer for this feature.</p>
                    </div>
                    <div class="col-md-4 text-center">
                        <span class="fa fa-lock fa-5x icon-vl-feat"></span>
                        <h3 class="mt8 mb0 h3">Second Feature</h3>
                        <p class="text-muted h4">Write what the customer would like to know,<br/>not what you want to show.</p>
                    </div>
                    <div class="col-md-4 text-center">
                        <span class="fa fa-heart fa-5x icon-vl-feat"></span>
                        <h3 class="mt8 mb0 h3">Third Feature</h3>
                        <p class="text-muted h4">A small explanation of this great<br/>feature, in clear words.</p>
                    </div>
                </div>
            </div>
        </section>
    </template>
  </data>
</odoo>
