<?xml version="1.0"?>
<odoo>
    <template id="report_vl_audit_report">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="doc">
                <tr>
                    <!--?xml version="1.0"?>
                    <t t-name="mgmtsystem_audit.audit_report">
                                <t t-set="doc" t-value="doc.with_context({'lang':doc.user_id.partner_id.lang})"/>
                                <t t-call="report.external_layout">
                                    <xpath expr="//div[@class='header']" position="replace"-->
                    <div class="header">
                        <table id="header_table" style="width:850px">
                            <tr>
                                <td rowspan="4" style="text-align: center;vertical-align: middle;border-style: solid;border-width: thin;padding-left: 3px; padding-right: 3px; padding-top: 3px; padding-bottom: 3px;">
                                    <img style="height: 100px" alt="client" src="/vl_maintenance/static/src/logo.jpg"/>
                                </td>
                                <td colspan="5" rowspan="4" style="text-align: center;vertical-align: middle;border-style: solid;border-width: thin;padding-left: 3px; padding-right: 3px; font-size:20px">Zapisnik internog audita</td>
                                <td rowspan="4" style="text-align: center; vertical-align: middle;border-style: solid;border-width: thin;padding-left: 3px; padding-right: 3px;">
                                    <table>
                                        <tr>
                                            <tr><td style="text-align: right;vertical-align: middle;padding-left: 3px; padding-right: 3px;">Oznaka: O1504</td></tr>
                                            <tr><td style="text-align: right;vertical-align: middle;padding-left: 3px; padding-right: 3px;">Izdanje: 001</td></tr>
                                            <tr><td style="text-align: right;vertical-align: middle;padding-left: 3px; padding-right: 3px;">Datum: 30.08.2019.</td></tr>
                                            <td style="text-align: right;vertical-align: middle;padding-left: 3px; padding-right: 3px;">Stranica:
                                            <span class="page"/> / <span class="topage"/>
                                            </td>
                                        </tr>
                                        <tr><td style="text-align: right;vertical-align: middle;padding-left: 3px; padding-right: 3px;"/></tr>
                                    </table>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <!--/xpath-->
                    <div class="page">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="text-center">
                                    <h3><strong>Izvještaj sa internog audita</strong></h3>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="padding-top:10px">
                        <div class="col-xs-12">
                            <div class="text-center">
                                <h3><strong t-field="doc.name"/></h3>
                            </div>
                        </div>
                    </div>
                    <!--div class="row" style="padding-top:10px">
                        <div class="col-xs-3">
                            Confidentially:
                        </div>
                        <div class="col-xs-9">
                            Internal
                        </div>
                    </div-->
                    <div class="row">
                        <div class="col-xs-3">
                            Oznaka:
                        </div>
                        <div class="col-xs-9">
                             <span t-field="doc.reference"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-3">
                            Datum:
                        </div>
                        <div class="col-xs-9">
                            <span t-field="doc.date"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-3">
                            Voditelj audita:
                        </div>
                        <div class="col-xs-9">
                            <ul class="list-unstyled">
                                <t t-foreach="doc.user_id" t-as="auditor">
                                    <li><span t-field="auditor.name"/></li>
                                </t>
                            </ul>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-3">
                            Auditori:
                        </div>
                        <div class="col-xs-9">
                            <ul class="list-unstyled">
                                <t t-foreach="doc.auditor_user_ids" t-as="auditor">
                                    <li><span t-field="auditor.name"/></li>
                                </t>
                            </ul>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-3">
                            Auditirane osobe:
                        </div>
                        <div class="col-xs-9">
                            <ul class="list-unstyled">
                                <t t-foreach="doc.auditee_user_ids" t-as="auditee">
                                    <li><span t-field="auditee.name"/></li>
                                </t>
                            </ul>
                        </div>
                    </div>
                    <div class="row" style="padding-top:20px">
                        <div class="col-xs-12">
                            <h3><strong>Verifikacijska lista</strong></h3>
                        </div>
                        <div class="col-xs-12">
                            <table class="table">
                                <tr>
                                    <th>Zahtjev norme</th>
                                    <th>Sukladnost?</th>
                                    <th>Komentar</th>
                                </tr>
                                <!--t t-foreach="doc.get_lines_by_procedure()" t-as="line">
                                    <t t-if="line['procedure']">
                                        <tr>
                                            <td>
                                                <span t-esc="line['procedure']"/>
                                            </td>
                                            <td/>
                                            <td/>
                                        </tr>
                                    </t>
                                    <t t-if="not line['procedure']">
                                        <tr>
                                            <td>
                                                <span t-esc="line['name']"/>
                                            </td>
                                            <td>
                                                <span t-esc="line['yes_no']"/>
                                            </td>
                                            <td/>
                                        </tr>
                                    </t>
                                </t-->
                                <t t-foreach="doc.line_ids" t-as="line">
                                    <tr>
                                        <td>
                                            <span t-esc="line.comments"/>
                                        </td>
                                        <td> DA /NE </td>
                                        <td/>
                                    </tr>
                                </t>
                            </table>
                        </div>
                    </div>
                    <div class="row" style="padding-top:10px">
                        <div class="col-xs-12">
                            <h3><strong>Nalazi audita:</strong></h3>
                            <span t-field="doc.audit_finds_all"/>
                        </div>
                        <div class="col-xs-12">
                            <h3><strong>Jake strane:</strong></h3>
                            <span t-field="doc.strong_points_all"/>
                        </div>

                        <div class="col-xs-12">
                            <h3><strong>Prijedlozi za poboljšanje:</strong></h3>
                            <span t-field="doc.imp_opp_all"/>
                        </div>

                        <!--div class="col-xs-12">
                            <h3><strong>Improvement opportunities:</strong></h3>
                            <ul style="padding-left:50px">
                                <t t-foreach="doc.imp_opp_ids" t-as="improvement">
                                    <t t-if="improvement.stage_id.name != 'Cancelled'">
                                        <li><span t-field="improvement.name"/></li>
                                    </t>
                                </t>
                            </ul>
                        </div-->

                        <div class="col-xs-12">
                            <h3><strong>Observacije:</strong></h3>
                            <ul style="padding-left:50px">
                                <t t-foreach="doc.observation_ids" t-as="observation">
                                    <t t-if="observation.state != 'cancel'">
                                    <li><span t-field="observation.requirement_id"/><br/><span t-field="observation.audit_finds"/></li>
                                </t>
                                </t>
                            </ul>
                        </div>


                        <div class="col-xs-12">
                            <h3><strong>Nesukladnosti:</strong></h3>
                            <ul style="padding-left:50px">
                                <t t-foreach="doc.nonconformity_ids" t-as="nonconformity">
                                    <t t-if="nonconformity.state != 'cancel'">
                                    <li><span t-field="nonconformity.requirement_id"/><br/><span t-field="nonconformity.audit_finds"/></li>
                                </t>
                                </t>
                            </ul>
                        </div>
                    </div>

                    </div>
                </tr>
            </t>
            <!--/t-->
        </t>
    </template>
</odoo>