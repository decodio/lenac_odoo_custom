<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record model="ir.ui.view" id="lead_report_search_view">
            <field name="name">Lead</field>
            <field name="model">lead.report</field>
            <field name="arch" type="xml">
                <search string="Lead">
                    <field name="name"/>
                    <field name="create_date"/>
                    <field name="user_id"/>
                    <field name="country_id"/>
                    <field name="imo_vat"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="lead_report_tree_view">
            <field name="name">Lead</field>
            <field name="model">lead.report</field>
            <field name="arch" type="xml">
                <tree string="Lead">
                    <field name="name"/>
                    <field name="create_date"/>
                    <field name="user_id"/>
                    <field name="country_id"/>
                    <field name="imo_vat"/>
                </tree>
            </field>
        </record>

       <record model="ir.ui.view" id="lead_report_form_view">
            <field name="name">Lead</field>
            <field name="model">lead.report</field>
            <field name="arch" type="xml">
                <form string="Lead">
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group string="Type">
                                <field name="name"/>
                                <field name="create_date"/>
                            </group>
                            <group>
                                <field name="user_id"/>
                                <field name="country_id"/>
                                <field name="imo_vat"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        
        
        <!-- Pivot View -->
        <record id="view_lead_report_pivot" model="ir.ui.view">
            <field name="name">lead.report.pivot</field>
            <field name="model">lead_report</field>
            <field name="arch" type="xml">
                <pivot string="Lead " disable_linking="True">
                    <field name="user_id" type="row"/>
                    <field name="create_date" type="col"/>
                    <field name="dock_stay" type="measure"/>
                </pivot>
            </field>
        </record>

        <!--  Graph View
        <record id="view_report_mgmtsystem_audit_graph" model="ir.ui.view">
            <field name="name">mgmtsystem.audit.report.graph</field>
            <field name="model">mgmtsystem.audit</field>
            <field name="arch" type="xml">
                <graph string="Audit">
                    <field name="state"/>
                    <field name="user_id"/>
                    <field name="number_of_audits" type="measure"/>
                </graph>
            </field>
        </record>
        -->


        <record model="ir.actions.act_window" id="lead_report_action">
            <field name="name">Lead</field>
            <field name="res_model">lead.report</field>
            <field name="view_type">form</field>
             <field name="view_mode">pivot,tree</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Lead report.
              </p>
            </field>
        </record>

        <menuitem id="menu_lead_report" action="lead_report_action"  sequence="1"/>


   </data>
</odoo>
