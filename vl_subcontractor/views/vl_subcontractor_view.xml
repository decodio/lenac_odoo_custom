<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record model="ir.ui.view" id="vl_subcontractor_search_view">
            <field name="name">Subcontractor</field>
            <field name="model">vl.subcontractor</field>
            <field name="arch" type="xml">
                <search string="Subcontractor">
                    <field name="name"/>
                    <field name="contact_person"/>
                    <field name="agent_ship_agent"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="vl_subcontractor_tree_view">
            <field name="name">Subcontractor</field>
            <field name="model">vl.subcontractor</field>
            <field name="arch" type="xml">
                <tree string="Subcontractor">
                    <field name="name"/>
                    <field name="contact_person"/>
                    <field name="agent_ship_agent"/>
                </tree>
            </field>
        </record>

       <record model="ir.ui.view" id="vl_subcontractor_form_view">
            <field name="name">Subcontractor</field>
            <field name="model">vl.subcontractor</field>
            <field name="arch" type="xml">
                <data>
                    <form string="Subcontractor">
                        <header>
                        </header>
                        <sheet>
                            <group string="Subcontractor">
                                <group>
                                    <field name="name"/>
                                    <field name="address"/>
                                    <field name="per_id_number"/>
                                    <field name="email_from"/>
                                    <field name="partner_phone"/>
                                    <field name="fax_number"/>
                                </group>
                                <group>
                                    <field name="contact_person"/>
                                    <field name="contact_person_email"/>
                                    <field name="filled_in_by"/>
                                    <field name="agent_ship_agent"/>
                                </group>
                            </group>
                        </sheet>
                    </form>
                    <notebook>
                        <page string="Organization/General Description" name="general_description">
                            <group string="General info">
                               <group>
                                    <field name="financial_group"/>
                                    <field name="company_age"/>
                                    <field name="product_range"/>
                                    <field name="type_service"/>
                                    <field name="bank"/>
                                    <field name="bank_account"/>
                                    <field name="total_personnel"/>
                               </group>
                                <group>
                                    <field name="administration"/>
                                    <field name="management"/>
                                    <field name="manpower"/>
                                    <field name="foreman"/>
                                    <field name="welders"/>
                                    <field name="pipe_welders"/>
                                   <field name="ship_fitter"/>
                                    <field name="locksmith"/>
                                    <field name="mechanic"/>
                                    <field name="electrician"/>
                                    <field name="other"/>
                                </group>
                            </group>
                        </page>
                        <page string="Previous Experience" name="previous_experience">
                            <group string="Experience">
                                <group>
                                    <field name="proj1_company"/>
                                    <field name="proj1_address"/>
                                    <field name="proj1_manager_name"/>
                                    <field name="proj1_date"/>
                                    <field name="proj1_project_desc"/>
                                </group>
                                <group>
                                    <field name="proj2_company"/>
                                    <field name="proj2_address"/>
                                    <field name="proj2_manager_name"/>
                                    <field name="proj2_date"/>
                                    <field name="proj2_project_desc"/>
                                </group>
                                <group>
                                    <field name="proj3_company"/>
                                    <field name="proj3_address"/>
                                    <field name="proj3_manager_name"/>
                                    <field name="proj3_date"/>
                                    <field name="proj3_project_desc"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                    <!--<page string="Issues" name="page_project_issues">
                        <group colspan="4" col="4">
                            <field name="project_issue_ids" nolabel="1"/>
                        </group>
                    </page>-->
                </data>
            </field>
        </record>

        <record model="ir.actions.act_window" id="vl_subcontractor_action">
            <field name="name">Subcontractor</field>
            <field name="res_model">vl.subcontractor</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new Subcontractor entry.
              </p>
            </field>
        </record>

        <menuitem id="menu_vl_subcontractor" action="vl_subcontractor_action"  sequence="1"/>





   </data>
</odoo>
